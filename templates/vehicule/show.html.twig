{% extends 'base.html.twig' %}

{% block title %}Véhicule{% endblock %}

{% block body %} {{ parent() }}
<div class="card mx-auto" style="width:80%; border:2px gray solid; margin-bottom:5%; background-color:#E9ECEF;">
        <div class="card-body">

            <h3 class="card-title text-center">{{ vehicule.marque | upper }} - {{ vehicule.model | upper }}</h3>
            <br/> 
            <div class="card-text">

            <div class="row">
            <div>
                <table class="table row " style="margin-left:10%;">
                    <tbody>
           
            <tr>
                <th class="border-list" style="border-top:2px gray solid">Marque</th>
                <td class="border-list" style="border-top:2px gray solid">{{ vehicule.marque }}</td>
            </tr>
             <tr>
                <th class="border-list">Modèle</th>
                <td class="border-list">{{ vehicule.model }}</td>
            </tr>
               <tr>
                <th class="border-list">N° série</th>
                <td class="border-list">{{ vehicule.numero }}</td>
            </tr>
            <tr>
                <th class="border-list">Kilométrage</th>
                <td class="border-list">{{ vehicule.kilometrage }}&nbsp;<span style="font-weight:bold;">Km<span></td>
            </tr>
            
            <tr>
                <th class="border-list">Immatriculation</th>
                <td class="border-list">{{ vehicule.imatriculation }}</td>
            </tr>
            <tr>
                <th class="border-list" style="width:50%;">Mise en circulation</th>
                <td class="border-list">{{ vehicule.miseencirculation ? vehicule.miseencirculation|date('d-m-Y') : '' }}</td>
            </tr> 
       
            </tbody>
            </table>
            </div>
            <div style="margin-left:7%; ">
            <table class="table row " style="margin-left:15%;">
            <tbody>
            <tr>
                <th class="border-list" style="border-top:2px gray solid">Porte</th>
                <td class="border-list" style="border-top:2px gray solid">{{ vehicule.porte }}</td>
            </tr>
             <tr>
                <th class="border-list">Carburant</th>
                <td class="border-list">{{ vehicule.carburant }}</td>
            </tr>
             <tr>
                <th class="border-list">Boîte</th>
                <td class="border-list">{{ vehicule.boite }}</td>
            </tr>
            <tr>
                <th class="border-list">Puissance</th>
                <td class="border-list">{{ vehicule.puissance }}&nbsp;<span style="font-weight:bold;">Cv<span></td>
            </tr>
            <tr>
                <th class="border-list">Annonce</th>
                  {% if vehicule.annonce == null %}
                    <td class="border-list"><p>vide</p></td>
                {% else %}
               <td class="border-list"><a href="{{ vehicule.annonce }}" target="_blank" >Lien</a></td>
                {% endif %}
            </tr>
             

            
        </tbody>
       
    </table>
    
    
   
</div><div class="text-right">
{# pour appeller une image avec lid en question tu peux aussi utiliser mais il ny aura pas le filtre mis avec le bundle liip #}
    <img class="img-fluid" style=" position:absolute; left:57%; width:35%;" src="{{asset('images/vehicules/')}}{{vehicule.filename}}" alt="">
</div>
</div>

<div class="text-left" style="margin-left:2%;">
 <p style=" font-family:Roboto; font-size:14px; color:black;"><span style="font-weight:bolder; font-family:Roboto; font-size:16px;">Option : <br> </span> {{ vehicule.options }}</p><br>
 <p style=" font-family:Roboto; font-size:14px; color:black;" > <span style="font-weight:bolder; font-family:Roboto; font-size:16px;">Révision / Entretien : <br> </span>  {{ vehicule.revision }}</p>
</div>
<div class="mt-5 ml-4">
<a href="{{ path('vehicule_edit', {'id': vehicule.id}) }}"><button class="btn btn-warning">Modifier</button></a></td>
{{ include('vehicule/create_modal.html.twig') }}

    {{ include('vehicule/_delete_form.html.twig') }}</div>
</div>
<div class="text-right"> <a href="{{ path('vehicule_index') }}"><svg xmlns="http://www.w3.org/2000/svg" width="70" height="70" style="color:black; margin-right:3%;" fill="currentColor" class="bi bi-box-arrow-right hover-arrow" viewBox="0 0 16 16">
