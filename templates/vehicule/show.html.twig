{% extends 'base.html.twig' %}

{% block title %}Véhicule{% endblock %}

{% block body %} {{ parent() }}
<div class="card mx-auto" style="width:70%; border:2px gray solid; margin-bottom:5%; background-color:#E9ECEF;">
        <div class="card-body">

            <h3 class="card-title text-center">{{ vehicule.marque | upper }} - {{ vehicule.model | upper }}</h3>
            <br/> 
            <div class="card-text">
                <table class="table row " style="margin-left:15%;">
                    <tbody>
           
            <tr>
                <th class="border-list">Marque</th>
                <td >{{ vehicule.marque }}</td>
            </tr>
             <tr>
                <th class="border-list">Modèle</th>
                <td>{{ vehicule.model }}</td>
            </tr>
            <tr>
                <th class="border-list">Kilométrage</th>
                <td>{{ vehicule.kilometrage }}&nbsp;<span style="font-weight:bold;">Km<span></td>
            </tr>
            <tr>
                <th class="border-list">Année</th>
                <td>{{ vehicule.annee }}</td>
            </tr>
            <tr>
                <th class="border-list">Immatriculation</th>
                <td>{{ vehicule.imatriculation }}</td>
            </tr>
            <tr>
                <th class="border-list">Mise en circulation</th>
                <td>{{ vehicule.miseencirculation ? vehicule.miseencirculation|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th class="border-list">Nbre de Porte</th>
                <td>{{ vehicule.porte }}</td>
            </tr>
            <tr>
                <th class="border-list">Puissance CV</th>
                <td>{{ vehicule.puissance }}&nbsp;<span style="font-weight:bold;">Cv<span></td>
            </tr>
            <tr>
                <th class="border-list">Note</th>
                <td>{{ vehicule.note }}</td>
            </tr>

            <tr>
                <td><br><a href="{{ path('vehicule_edit', {'id': vehicule.id}) }}"><button class="btn btn-warning">Modifier</button></a></td>
            </tr>
        </tbody>

    <img style="position:absolute; left:55%; width:35%;" src="{{ asset('../asset/img/vehicule.jpg') }}" alt="">

    </table>
    

<div class="text-right"> <a href="{{ path('vehicule_index') }}"><svg xmlns="http://www.w3.org/2000/svg" width="70" height="70" style="color:black; margin-right:3%;" fill="currentColor" class="bi bi-box-arrow-right hover-arrow" viewBox="0 0 16 16">
