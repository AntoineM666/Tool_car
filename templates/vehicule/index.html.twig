{% extends 'base.html.twig' %}

{% block title %}Stock des Véhicules{% endblock %}

{% block body %} {{ parent() }}

    <div class="card mx-auto" >
        <div class="card-body">

            <h3 class="card-title text-center title">Stock des véhicules</h3><br>
 <a href="{{ path('vehicule_new') }}"><button type="button" class="btn btn-primary mx-1 my-2 mb-4">Ajouter un nouveau véhicule</button></a>
            
    <div class="table">
            <table class="table table-striped text-center">
                <thead class="thead-dark">
                    <tr>
                        <th >Marque</th>
                        <th>Modèle</th>
                        <th>Km</th>
                        <th>Année</th>
                        <th>Immatriculation</th>
                        <th>Mise En Circulation</th>
                        <th>Boite Vitesse</th>
                        <th>Carburant</th>
                        <th>Nbre Porte</th>
                        <th>Puissance CV</th>
                        <th>Note</th>
                        <th></th>
                    </tr>
                </thead>

               <tbody>
        {% for vehicule in vehicules %}
            <tr>
                <td class="border-list">{{ vehicule.marque }}</td>
                <td class="border-list">{{ vehicule.model }}</td>
                <td class="border-list">{{ vehicule.kilometrage }}</td>
                <td class="border-list">{{ vehicule.annee }}</td>
                <td class="border-list">{{ vehicule.imatriculation }}</td>
                <td class="border-list">{{ vehicule.miseencirculation ? vehicule.miseencirculation|date('d-m-Y') : '' }}</td>
                <td class="border-list">{{ vehicule.boite }}</td>
                <td class="border-list">{{ vehicule.carburant }}</td>
                <td class="border-list">{{ vehicule.porte }}</td>
                <td class="border-list">{{ vehicule.puissance }}</td>
                <td >{{ vehicule.note }}</td>
                <td class="row">
                    <a href="{{ path('vehicule_show', {'id': vehicule.id}) }}"><button type="button" class="btn btn-success ">Voir</button></a>
                    
                    {{ include('vehicule/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Liste vide</td>
            </tr>
        {% endfor %}
        </tbody>
            </table>
    </div>


          
           
        </div>
    </div>
{% endblock %}

